<header id="head" data-speed="0.5" data-bleed="20">

    <div id="head_content" class="header">

        {{#if @blog.logo}}
        <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}} Logo" /></a>
		{{else}}
        <h1 id="title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
		{{/if}}

        {{> nav}}

        <p id="description">{{@blog.description}}</p>

    </div>

</header>